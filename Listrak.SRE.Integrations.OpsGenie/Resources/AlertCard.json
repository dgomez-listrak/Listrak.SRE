{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "speak": "OpsGenie Alert",
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "https://picsum.photos/300?image=882",
              "size": "small"
            }
          ]
        },
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "type": "TextBlock",
              "text": "[${title}](https://opsg.in/a/i/lstrk/${alertId})",
              "weight": "bolder",
              "spacing": "none"
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${description}",
      "wrap": true
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Priority: ",
          "value": "${priority}"
        },
        {
          "title": "Status: ",
          "value": "${status}"
        },
        {
          "title": "Source: ",
          "value": "${source}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Acknowledge",
      "data": {
        "type": "Ack",
        "alertId": "${alertId}",
        "replyToId": "${alertId}"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Close",
      "data": {
        "type": "Close",
        "alertId": "${alertId}",
        "replyToId": "${alertId}"
      }
    },
    {
      "type": "Action.OpenUrl",
      "title": "Close",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Add Note",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Snooze",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Incident",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    }
  ]
}