{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "speak": "OpsGenie Alert",
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "https://picsum.photos/300?image=882",
              "size": "small"
            }
          ]
        },
        {
          "type": "Column",
          "width": 2,
          "items": [

            {
              "type": "TextBlock",
              "text": "${title}",
              "weight": "bolder",
              "spacing": "none",
              "url": "http://www.google.com"
            },

            {
              "type": "TextBlock",
              "text": "${description}",
              "size": "small",
              "wrap": true
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Acknowledge",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Close",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Add Note",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Snooze",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Incident",
      "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
    }
  ]
}